<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ustc.yzwx.integration.sample.dao.SampleDao">
    <resultMap id="regionMap" type="ustc.yzwx.presentation.sample.form.SampleForm" >
        <result column="code" property="code" />
        <result column="name" property="name" />
    </resultMap>

    <sql id="regionWhereClause">
        FROM
            wx_region
        <where>
        	code like CONCAT('%',#{code},'%')
        </where>
    </sql>

    <select id="search" parameterType="String" resultMap="regionMap">
        SELECT
            code,
            name
        <include refid="regionWhereClause" />
    </select>
</mapper>